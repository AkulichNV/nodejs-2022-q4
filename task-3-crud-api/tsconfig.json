{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["ES2016"],                                      

    "module": "commonjs",                                
    "rootDir": "",                                  
    "resolveJsonModule": true,                        

    "allowJs": true,                                 
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                      
    "noImplicitAny": true,                           
    "skipLibCheck": true                                
  }
}
